char *strcpy(char *strDes,const char *strSrc){   //源串用const 修饰
  /*if(strDes==NULL||strSrc==NULL) printf("invalid arguments\n");  检测输入是否为空指针，如果是，采取相应措施*/
  char *strDesCpy=strDes;
  while((*strDes++=*strSrc++)!='\0') ;
  return strDesCpy;
}



void copy(char to[],char from[]){     //这个函数没有返回值
  int i;
  while((to[i]=from[i])!='\0') i++;   //while((to[i]=from[i++])!='\0') ;
}
